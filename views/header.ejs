<style>
/* Menu */
nav {
    font-weight: bold;
  }
  
  nav a.active {
    text-decoration: underline;
    background-color: #e0fbfc;
  }
  
  nav ul {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    list-style-type: none;
  }
  
  nav ul li {
    display: flex;
    text-decoration: none;
    margin: 12px;
  }
  
  nav > ul > li > a {
    background-color: #98c1d9;
    border: 2px solid #000000;
    color: black;
    font-size: 200%;
    padding: 12px 40px 12px 40px;
  }
  
  nav ul li:hover {
    transform: scale(1.1);
  }

  /* General */
  body {
        background-color: #3d5a80;
        font-family: sans-serif;
        margin: 0px;
      }
      
      main {
        margin: 36px;
        text-align: center;
      }
      
      header {
        background-color: #293241;
        border: 2px solid #000000;
        text-align: center;
      }
      
      .headerBox {
        width: fit-content;
        background-color: #98c1d9;
        border: 2px solid #000000;
        padding: 12px;
        margin-bottom: 24px;
        display: inline-block;
      }
      
      .headerBox p {
        font-size: 100%;
      }
      
      header h1 {
        background-color: white;
        border: 2px solid #000000;
        display: inline-block;
        padding: 6px;
        margin: 24px;
        -webkit-box-shadow: 3px 6px 23px -7px #000000;
        box-shadow: 3px 6px 23px -7px #000000;
      }

      .user {
        display: inline-block;
        padding: 10px;
        border: 1px solid white;
        background-color: white;
      }
    
      .user a {
        color: black;
        text-decoration: none;
      }
    
      .user a:hover {
        text-decoration: underline;
      }

          /* Add the following styles for the cart button */
    .cart-button {
      position: absolute;
      top: 20px;
      right: 20px;
      padding: 12px 24px;
      font-size: 16px;
      border: none;
      background-color: #2980b9;
      color: #fff;
      cursor: pointer;
      text-decoration: none; 
    }

    .cart-button:hover {
      background-color: #1a5276;
    }

</style>

<header>
    <div class="logo">
      <h1>Govan Bargains</h1>
    </div>
    <div class="user">
      <% if (isLoggedIn) { %>
        <a href="#" id="logout-link">Logout</a>
        <a href="/cart" class="cart-button">Cart</a>
      <% } else { %>
        <a href="/login">Sign In/Sign Up</a>
      <% } %>
      
    </div>
    
    <nav>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/store">Store</a></li>
        <li><a href="#">Donations</a></li>
        <li><a href="#">About Us</a></li>     
        <% console.log("userId:", userId); %>
        <% if (isLoggedIn && userId == 1) { %>
          <li><a href="/admin">Admin Page</a></li>
        <% } %>
      </ul>
    </nav>
    <script src="logout.js"></script>
  </header>